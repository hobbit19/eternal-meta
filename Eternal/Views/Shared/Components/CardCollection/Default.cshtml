@model PaginatedList<Eternal.Models.Card>

<div class="collection-vm">

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <div class="col-md-12 col-xs-12" style="margin-bottom: 15px;">

        <button style="float:left;" class="btn btn-default btn-lg" onclick="changePage(@(Model.PageIndex - 1), '@ViewData["SearchFilter"]', '@ViewData["FactionFilter"]', '@ViewData["CostFilter"]')" @prevDisabled>
            Previous
        </button>

        <button style="float:right;" class="btn btn-default btn-lg" onclick="changePage(@(Model.PageIndex + 1), '@ViewData["SearchFilter"]', '@ViewData["FactionFilter"]', '@ViewData["CostFilter"]')" @nextDisabled>
            Next
        </button>

    </div>

    <div class="row">
        @foreach (var card in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4" style="padding:2px;">
                <a class="card-link" href="@Url.Action("Details", "Cards", new { id = card.CardID })">
                    <img class="card-image img-responsive" src="@Url.Content(card.ImageUrl)" />
                </a>
            </div>
        }
    </div>

</div>